<%= will_paginate @users %>  
<% @users.each do |user| %>  
	<li>
	  <%= gravatar_for user, :size => 30 %>
	  <%= link_to user.login, user %>
	  <% if current_user.admin? %>
	  <%= link_to "delete", user, :method => :delete, :confirm => "You sure?",
	                              :title => "Delete #{user.login}" %>
	  <% end %>
	 </li>
<% end %>  
<%= will_paginate @users %>