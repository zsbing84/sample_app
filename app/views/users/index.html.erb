<h1>All users</h1>

<% form_tag users_path, :method => 'get', :remote => true do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= javascript_include_tag 'pagination.js' %>
<div id="users">  
  <%= render 'users' %>  
</div>